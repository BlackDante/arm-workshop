{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "admin-username": { "type": "string" },
      "admin-password": { "type": "securestring" }
    },
    "variables": {
      "vnetID": "[resourceId('Microsoft.Network/virtualNetworks','myVNet')]", 
      "subnetRef-1": "[concat(variables('vnetID'),'/subnets/mySubnet-1')]",
      "subnetRef-2": "[concat(variables('vnetID'),'/subnets/mySubnet-2')]",
      "nsg-name": "nsg-name"
    },
    "resources": [
        {
            "name": "nsg-deploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "contentVersion": "1.0.0.0",
                    "uri": "https://raw.githubusercontent.com/BlackDante/arm-workshop/master/3.2/shared/nsg.json"
                },
                "parameters": {
                    "nsg-name": {"value": "[variables('nsg-name')]"}
                }
            }
        },
      {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "myPublicIPAddress-1",
        "location": "[resourceGroup().location]",
        "properties": {
          "publicIPAllocationMethod": "Dynamic",
          "dnsSettings": {
            "domainNameLabel": "tyg3-rg-we-dns-1"
          }
        }
      },
      {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "myPublicIPAddress-2",
        "location": "[resourceGroup().location]",
        "properties": {
          "publicIPAllocationMethod": "Dynamic",
          "dnsSettings": {
            "domainNameLabel": "tyg3-rg-we-dns-2"
          }
        }
      },
      {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "myVNet",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg-name'))]"
        ],
        "properties": {
          "addressSpace": { "addressPrefixes": [ "10.0.0.0/16" ] },
          "subnets": [
            {
              "name": "mySubnet-1",
              "properties": { 
                  "addressPrefix": "10.0.0.0/24",
                  "networkSecurityGroup": {
                      "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg-name'))]"
                  }
               }
            },
            {
                "name": "mySubnet-2",
                "properties": {
                    "addressPrefix": "10.0.1.0/24",
                    "networkSecurityGroup": {
                        "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg-name'))]"
                    }
                }
            }
          ]
        }
      },
      {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "myNic-1",
        "location": "[resourceGroup().location]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/publicIPAddresses/', 'myPublicIPAddress-1')]",
          "[resourceId('Microsoft.Network/virtualNetworks/', 'myVNet')]"
        ],
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "privateIPAllocationMethod": "Dynamic",
                "publicIPAddress": { "id": "[resourceId('Microsoft.Network/publicIPAddresses','myPublicIPAddress-1')]" },
                "subnet": { "id": "[variables('subnetRef-1')]" }
              }
            }
          ]
        }
      },
      {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "myNic-2",
        "location": "[resourceGroup().location]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/publicIPAddresses/', 'myPublicIPAddress-2')]",
          "[resourceId('Microsoft.Network/virtualNetworks/', 'myVNet')]"
        ],
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig2",
              "properties": {
                "privateIPAllocationMethod": "Dynamic",
                "publicIPAddress": { "id": "[resourceId('Microsoft.Network/publicIPAddresses','myPublicIPAddress-2')]" },
                "subnet": { "id": "[variables('subnetRef-2')]" }
              }
            }
          ]
        }
      },
      {
          "name": "vm-deploy",
          "type": "Microsoft.Resources/deployments",
          "apiVersion": "2015-01-01",
          "dependsOn": [
              "[resourceId('Microsoft.Network/networkInterfaces','myNic-1')]"
          ],
          "properties": {
              "mode": "Incremental",
              "templateLink": {
                  "contentVersion": "1.0.0.0",
                  "uri": "https://raw.githubusercontent.com/BlackDante/arm-workshop/master/3.2/shared/vm.json"
              },
              "parameters": {
                  "vm-name": { "value": "my-vm-name" },
                  "admin-username": { "value": "[parameters('admin-username')]" },
                  "admin-password": { "value": "[parameters('admin-password')]" },
                  "vm-nic": { "value": "[resourceId('Microsoft.Network/networkInterfaces','myNic-1')]" }
              }
          }
      },
      {
        "name": "vm-deploy-2",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2015-01-01",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkInterfaces','myNic-1')]"
        ],
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "contentVersion": "1.0.0.0",
                "uri": "https://raw.githubusercontent.com/BlackDante/arm-workshop/master/3.2/shared/vm.json"
            },
            "parameters": {
                "vm-name": { "value": "my-vm-name-2" },
                "admin-username": { "value": "[parameters('admin-username')]" },
                "admin-password": { "value": "[parameters('admin-password')]" },
                "vm-nic": { "value": "[resourceId('Microsoft.Network/networkInterfaces','myNic-2')]" }
            }
        }
    }
    ]
  }